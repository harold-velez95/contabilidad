<%- include("partials/header.ejs") %>
   <h1>Resultados</h1>
   <a href="/"><button type="button" class="navbutton">Página de inicio</button></a>
</section>
<section class="contenido_patrimonio">
    <% if (locals.informe_resultados && locals.fecha1 && locals.fecha2){ %>
        <h1>Desde <span style="font-weight: bolder;">"<%= fecha1 %>"</span> hasta <span style="font-weight: bolder;">"<%= fecha2 %>"</span></h1>
            <div class="card-resultados">
                <div class="card-r-h">
                    <h2>Ingresos totales: <%= informe_resultados["Ingreso"]  %> €</h2>
                    <h2 class="gastos">gastos en Arriendo: <%= informe_resultados["Arriendo"]  %> €</h2>
                    <hr/>
                </div>
                <div class="card-r-h">
                    <h2 class="gastos">Majo: <%= informe_resultados["Majo"]  %> €</h2>
                    <h2 class="gastos">Ocio: <%= informe_resultados["Ocio"]  %> €</h2>
                    <h2 class="gastos">Mercadona: <%= informe_resultados["Mercadona"]  %> €</h2>
                    <h2 class="gastos">Educación: <%= informe_resultados["Educacion"]  %> €</h2>
                    <h2 class="gastos">Salud: <%= informe_resultados["Salud"]  %> €</h2>
                    <h2 class="gastos">Transporte: <%= informe_resultados["Transporte"]  %> €</h2>
                    <h2 class="gastos">Gym: <%= informe_resultados["Gym"]  %> €</h2>
                    <h2 class="gastos">Barbero: <%= informe_resultados["Barbero"]  %> €</h2>
                    <hr/>
                    <h1>Margen neto: <%= informe_resultados["Ingreso"]+ informe_resultados["Ocio"]+ informe_resultados["Arriendo"]+ informe_resultados["Mercadona"]+ informe_resultados["Educacion"] +informe_resultados["Salud"]+ informe_resultados["Majo"]+ informe_resultados["Transporte"]+ informe_resultados["Gym"]+ informe_resultados["Barbero"]  %> €</h1>
                </div>
            </div>
            <!-- Botón para descargar el Excel -->
            <form class="btn-excel" action="/descargar-excel" method="GET">
                <button type="submit">Descargar Excel</button>
            </form>
                <% } else { %>
                    <form class="btn-excel" action="/resultados" method="POST" id="form_cobros">
                        <fieldset>
                            indique la fecha de inicio: <input type="date" name="fecha1">
                            indique la fecha de fin: <input type="date" name="fecha2">
                            <button type="submit">Buscar</button>
                        </fieldset>
                    </form>
        
                <% } %>
    </section>
   <script src="scripts.js"></script>
</body>
</html>